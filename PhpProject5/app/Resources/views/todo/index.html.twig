{% extends 'base.html.twig' %} 
{% block body %}
    
    {% if app.user != null %}
    <h2 class="page-header">Latest Todos</h2>
    <table class="table table-striped"> 
        <thead> 
            <tr> 
                <th>#</th> 
                <th>To do: </th> 
                <th>Due date: </th> 
                <th></th>
            </tr> 
        </thead> 
        <tbody>
            {% for todo in todos %}
            <tr> 
                <th scope="row">{{todo.id}}</th> 
                    <td>{{todo.name}}</td> 
                    <td>{{todo.dueDate|date('F j, Y, g:i a')}}</td> 
                    <td><a href="/PhpProject5/web/app_dev.php/todo/details/{{todo.id}}" class="btn btn-success">View</a>
                        <a href="/PhpProject5/web/app_dev.php/todo/edit/{{todo.id}}" class="btn btn-default">Edit</a>
                        <a href="/PhpProject5/web/app_dev.php/todo/delete/{{todo.id}}" class="btn btn-danger">Delete</a>
                    </td>
            </tr>
            {% endfor %}
        </tbody> 
    </table>
    {% endif %}
{% endblock %}

